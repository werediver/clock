{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Cargo build",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "options": {
        "cwd": "app"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    },
    {
      "label": "Cargo build release",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--release"
      ],
      "options": {
        "cwd": "app"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    }
  ]
}